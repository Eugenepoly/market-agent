GEMINI_API_KEY=your_gemini_api_key_here
GCS_BUCKET=market-reports-bucket

# 模型配置
GEMINI_MODEL=gemini-2.0-flash

# 本地运行配置
RUN_LOCAL=true
LOCAL_OUTPUT_DIR=./reports

# 工作流配置
WORKFLOW_STATE_DIR=./.workflow_state
PENDING_APPROVAL_DIR=./pending_social_content
APPROVED_DRAFTS_DIR=./approved_social_content

# Email Configuration (for sending Market Update)
EMAIL_ENABLED=true
EMAIL_RECIPIENT=your@email.com
EMAIL_SENDER=your-gmail@gmail.com
EMAIL_PASSWORD=xxxx-xxxx-xxxx-xxxx  # Gmail App Password (非登录密码)
